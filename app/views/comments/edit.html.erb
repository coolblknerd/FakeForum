<h1>Edit Comment</h1>

<%= form_for([@message, @comment]) do |f| %>

  <div class="form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, class: "form-control", rows: "2", placeholder: "What's on your mind?" %>
  </div>

  <%= f.submit "Comment", class: "btn btn-primary" %>

<% end %>
